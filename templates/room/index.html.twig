{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        {% for i in 1..5 %}
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Titre de la carte {{ i }}</h5>
                        <p class="card-text">Contenu de la carte {{ i }}</p>
                        <a href="#" class="btn btn-primary">Aller quelque part</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}