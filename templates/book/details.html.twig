{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}


<div class="container">

<h2>Détails du livre</h2>

        <div class="card text-center p-5">
        <img class="cardImage rounded mx-auto d-block" src="{{book.image}}" alt="image {{book.title}}">
        <h1>{{book.title}}</h1>
        <h5>de {{book.author}}</h5>
        <h5>Publié le {{book.publicationYear}}</h5>
        <p>{{book.summary}}</p>
        <p>{{book.state.name}}</p>
        <p>Note : {{book.globalRating}} / 5</p>
        <button class="btn btn-warning w-25 mx-auto">Réserver</button>
        </div>

        <a class="btn btn-primary" href="{{ path('app_book') }}">Retour à la liste</a>

</div>
{% endblock %}
